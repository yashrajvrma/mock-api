generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ASSISTANT
  USER
}

enum Status {
  PENDING
  COMPLETED
}

model User {
  id String @id @default(uuid())

  fullName String?
  email    String  @unique
  password String  @db.VarChar(255)

  refreshToken String?

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  MockRoute MockRoute[]
  Chat      Chat[]

  @@map("user")
}

model Chat {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  title     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  MockRoute MockRoute[]
  Message   Message[]
}

model Message {
  id String @id @default(uuid())

  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id])

  content   String
  role      Role
  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MockRoute {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id])

  method String
  path   String

  response  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
